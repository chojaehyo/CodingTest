#include <cstdio>
#include <cstring>
using namespace std;

int main(){
  int n;
  scanf("%d", &n);
  
  int cnt = 0;
  for(int i=0;i<n;i++){
    char input[105] = {0};
    int alpha[30] = {0};
    
    scanf("%s", input);
    
    int len = strlen(input);
    
    bool flag = false;
    
    alpha[input[0]-'a'] = 1;
    
    for(int i=0;i<len-1;i++){
      if(input[i] == input[i+1]) continue;
      else{
        if(!alpha[input[i+1]-'a']) alpha[input[i+1]-'a'] = 1;
        else{
          flag = true;
          break;
        }
      }
    }
    if(!flag) cnt++;
  }
  printf("%d\n", cnt);
  return 0;
}
